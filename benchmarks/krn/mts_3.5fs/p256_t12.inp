[INPUT]
grotopfile                = ../topol.top
grocrdfile                = ../crd/hero11_tdp43_solv_ions_em1.gro
rstfile                   = ../hero11_tdp43_npt3.rst

# [OUTPUT]
# dcdfile                   = hero11_tdp43_benchmark.dcd
# rstfile                   = hero11_tdp43_benchmark.rst

[ENERGY]
forcefield                = GROAMBER    # [CHARMM,AMBER,GROAMBER,GROMARTINI]
electrostatic             = PME
switchdist                = 10.0     # switch distance
cutoffdist                = 10.0     # cutoff distance
pairlistdist              = 12.0     # pair-list distance
pme_ngrid_x               = 512
pme_ngrid_y               = 512
pme_ngrid_z               = 512

[DYNAMICS]
integrator                = VRES
nsteps                    = 4800
timestep                  = 0.0035
eneout_period             = 100
# crdout_period             = 5000
# rstout_period             = 5000
stoptr_period             = 10
elec_long_period          = 2
thermostat_period         = 6
barostat_period           = 6

[CONSTRAINTS]
rigid_bond                = YES
hydrogen_type             = mass
fast_water                = YES
water_model               = SOL
hydrogen_mass_upper_bound = 2.0

[ENSEMBLE]
ensemble                  = NPT
tpcontrol                 = BUSSI
temperature               = 300.0
pressure                  = 1.0
tau_p                     = 10.0

[BOUNDARY]
type                      = PBC
domain_x                  = 8
domain_y                  = 8
domain_z                  = 4
